\NewDocumentCommand \jamotextcmd { m }
{
	\tl_set:Nn \l_tmpa_tl { #1 / }
	\regex_replace_all:nnN { / } { |/ } \l_tmpa_tl
	\regex_replace_all:nnN { ; } { ;/ } \l_tmpa_tl
	\regex_replace_all:nnN { : } { :/ } \l_tmpa_tl
	
	\exp_args:Nno \regex_split:nnN { / } { \l_tmpa_tl } \l_tmpa_seq
	
	\seq_map_indexed_function:NN \l_tmpa_seq \build_syl:nn
}

